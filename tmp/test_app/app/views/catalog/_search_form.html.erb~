<div id="search-bar" class="navbar-inner visible-desktop">
  <div class="container">
  <%= form_tag url_for(:controller=>'catalog', :action=>'index'), :method => :get, :class => 'form-inline search-form' do %>
   <!-- <h2 class="search"><%= label_tag(:q, t('blacklight.search.form.q')) %></h2> -->
    <%= text_field_tag :q, params[:q], :class => "q input-xlarge search-query" %>
    <% unless search_fields.empty? %>
      <%= label_tag(:search_field, " #{t('blacklight.search.form.search_field.label')} ") %>
      <%= select_tag(:search_field, options_for_select(search_fields, h(params[:search_field])), :title => t('blacklight.search.form.search_field.title'), :class=>"search_field") %>
    <% end %>
    <%= search_as_hidden_fields(:omit_keys => [:q, :search_field, :qt, :page]).html_safe %>        
    
    <%= submit_tag t('blacklight.search.form.submit'), :class=>'btn' %>
  <% end %>
  </div>
</div>

<div id="moblet-search-bar" class="navbar-inner hidden-desktop">
  <div class="container">
  <%= form_tag url_for(:controller=>'catalog', :action=>'index'), :method => :get, :class => 'form-inline search-form' do %>
   <!-- <h2 class="search"><%= label_tag(:q, t('blacklight.search.form.q')) %></h2> -->
    <%= text_field_tag :q, params[:q], :class => "q input-medium search-query" %>
    <% unless search_fields.empty? %>
      <%= label_tag(:search_field, " #{t('blacklight.search.form.search_field.label')} ") %>
      <%= select_tag(:search_field, options_for_select(search_fields, h(params[:search_field])), :title => t('blacklight.search.form.search_field.title'), :class=>"search_field input-small") %>
    <% end %>
    <%= search_as_hidden_fields(:omit_keys => [:q, :search_field, :qt, :page]).html_safe %>        
  
    <%= button_tag(:class => 'btn') do %>
      <%= content_tag(:i, "", :type => 'submit', :class => 'icon-search icon') %>
    <% end %>
  <% end %>
  </div>
</div>

